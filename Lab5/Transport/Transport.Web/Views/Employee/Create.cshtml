@model Transport.Infrastructure.Data.Entities.Employee


<div class="container">
    <h1>Добавление</h1>
    <hr/>
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="SecondName" class="control-label"></label>
                    <input asp-for="SecondName" class="form-control"/>
                    <span asp-validation-for="SecondName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="FirstName" class="control-label"></label>
                    <input asp-for="FirstName" class="form-control"/>
                    <span asp-validation-for="FirstName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="checkbox" class="form-check-input" asp-for="IsSecondShift" id="exampleCheck1">
                    <label class="form-check-label" for="exampleCheck1">Вторая смена</label>
                    <span asp-validation-for="IsSecondShift" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="RankId" class="control-label"></label>
                    <select asp-for="RankId" class="form-control">
                    @foreach (var rank in ViewBag.Ranks)
                    {
                        <option value="@rank.Id">@rank.Name</option>
                    }
                    </select>
                    <span asp-validation-for="RankId" class="text-danger"></span>
                </div>
                <div class="form-group mt-2">
                    <input type="submit" value="Добавить" class="btn btn-outline-secondary"/>
                </div>
            </form>
        </div>
    </div>
    <div>
        <a asp-action="Index">Назад</a>
    </div>
</div>


@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}