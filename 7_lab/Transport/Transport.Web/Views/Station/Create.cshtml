@model Transport.Infrastructure.Data.Entities.Station


<div class="container">
    <h1>Добавление</h1>
    <hr/>
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control"/>
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="checkbox" class="form-check-input" asp-for="WithControlRoom" id="exampleCheck1">
                    <label class="form-check-label" for="exampleCheck1">С диспетчерской</label>
                    <span asp-validation-for="WithControlRoom" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Добавить" class="btn btn-outline-secondary"/>
                </div>
            </form>
        </div>
    </div>
    <div>
        <a asp-action="Index">Назад</a>
    </div>
</div>


@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}